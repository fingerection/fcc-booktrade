//- index.jade
extends ./base.jade


block container
  .jumbotron
    .row
      .col-md-5
        h3= vote.name 
        form(method="post")
          .form-group
            select.form-control(name="select")
              each i in vote.options
                option(value=i.id)= i.option
          .form-group
            button.btn.btn-default(type='submit') Submit
      .col-md-7
        canvas#myChart(width='200', height='200')
        


block footer
  script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.6/Chart.min.js')
  script.
    var ctx = document.getElementById("myChart");
    var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
    labels: [!{ optionString }],
    datasets: [{
    label: '# of Votes',
    data: [!{ dataString }],
    backgroundColor: [
    'rgba(255, 99, 132, 0.2)',
    'rgba(54, 162, 235, 0.2)',
    'rgba(255, 206, 86, 0.2)',
    'rgba(75, 192, 192, 0.2)',
    'rgba(153, 102, 255, 0.2)',
    'rgba(255, 159, 64, 0.2)'
    ],
    borderColor: [
    'rgba(255,99,132,1)',
    'rgba(54, 162, 235, 1)',
    'rgba(255, 206, 86, 1)',
    'rgba(75, 192, 192, 1)',
    'rgba(153, 102, 255, 1)',
    'rgba(255, 159, 64, 1)'
    ],
    borderWidth: 1
    }]
    },
    options: {
    // Boolean - whether or not the chart should be responsive and resize when the browser does.
    responsive: true,
    // Boolean - whether to maintain the starting aspect ratio or not when responsive, if set to false, will take up entire container
    maintainAspectRatio: false,
    scales: {
    yAxes: [{
    ticks: {
    beginAtZero:true
    }
    }]
    }
    }
    });