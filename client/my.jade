//- index.jade
extends ./base.jade

block navlist
  li.active
    a(href='/') All Books
  if user
    li
      a(href='/create') New Book
    li.active
      a(href='/my') My Books
    li
      a(href='/trade') My Trade
      
block header
  link(rel='stylesheet', href='/css/main.css')

block container
    .grid(data-masonry='{ "itemSelector": ".card", "columnWidth": 200 }')
      each book in books
        .card(id="book"+book.id)
          img(src=book.url)
          a.requestlabel(data-id=book.id)
            i.remove.glyphicon.glyphicon-retweet.glyphicon-white
          p= book.title
          a.deletelabel(data-id=book.id)
            i.remove.glyphicon.glyphicon-remove-sign.glyphicon-white
    
block footer
  script(src='https://unpkg.com/masonry-layout@4.0/dist/masonry.pkgd.js')
  script(src='/js/common.js')
  script(src='/js/my.js')