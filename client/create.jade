//- index.jade
extends ./base.jade

block navlist
  li
    a(href='/') All Books
  if user
    li.active
      a(href='/create') New Book
    li
      a(href='/my') My Books
    li
      a(href='/trade') My Trade

block container
  .row
    .col-md-4.col-md-offset-4
      h1 New Book
      form(method="post")
        .form-group
          label(for='imageUrl') Cover url
          input#imageUrl.form-control(type='text', placeholder='url', name='url')
        .form-group
          label(for='imageTitle') Book Name 
          input#imageTitle.form-control(type='text', placeholder='name', name='title')
        button.btn.btn-block.btn-primary(type='submit') Save
